<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════════════
         WOODCRAFT DARK THEME COLOR PALETTE
         CAD-inspired dark theme with wood accent colors
         ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Background Hierarchy (darkest to lightest) -->
    <Color x:Key="BackgroundDark">#0D0D0D</Color>
    <Color x:Key="BackgroundMedium">#1A1A1A</Color>
    <Color x:Key="BackgroundLight">#242424</Color>
    <Color x:Key="BackgroundLighter">#2D2D2D</Color>
    <Color x:Key="BackgroundLightest">#363636</Color>

    <!-- Surface/Borders -->
    <Color x:Key="SurfaceStroke">#3D3D3D</Color>
    <Color x:Key="SurfaceStrokeLight">#4D4D4D</Color>
    <Color x:Key="SurfaceStrokeFocus">#5D5D5D</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#F0F0F0</Color>
    <Color x:Key="TextSecondary">#A0A0A0</Color>
    <Color x:Key="TextTertiary">#808080</Color>
    <Color x:Key="TextDisabled">#606060</Color>

    <!-- Wood Accent Colors (Golden Oak / Dark Walnut) -->
    <Color x:Key="AccentPrimary">#D4894B</Color>
    <Color x:Key="AccentPrimaryHover">#E09B5A</Color>
    <Color x:Key="AccentPrimaryPressed">#C07A3F</Color>
    <Color x:Key="AccentPrimaryDark">#A66B35</Color>
    <Color x:Key="AccentSecondary">#8B5A2B</Color>
    <Color x:Key="AccentSecondaryHover">#9B6A3B</Color>

    <!-- Semantic Colors -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="SuccessLight">#66BB6A</Color>
    <Color x:Key="Warning">#FFA726</Color>
    <Color x:Key="WarningLight">#FFB74D</Color>
    <Color x:Key="Error">#EF5350</Color>
    <Color x:Key="ErrorLight">#EF6B6B</Color>
    <Color x:Key="Info">#42A5F5</Color>
    <Color x:Key="InfoLight">#64B5F6</Color>

    <!-- Special Purpose -->
    <Color x:Key="SelectionBackground">#3D3D3D</Color>
    <Color x:Key="SelectionBackgroundHover">#4D4D4D</Color>
    <Color x:Key="OverlayBackground">#80000000</Color>
    <Color x:Key="ViewportBackground">#141414</Color>
    <Color x:Key="GridLine">#2A2A2A</Color>
    <Color x:Key="GridLineMinor">#1F1F1F</Color>

    <!-- Wood Visualization Colors -->
    <Color x:Key="WoodLight">#DEB887</Color>
    <Color x:Key="WoodMedium">#CD853F</Color>
    <Color x:Key="WoodDark">#8B4513</Color>
    <Color x:Key="WoodGrain">#A0522D</Color>

    <!-- ═══════════════════════════════════════════════════════════════════════
         SOLID COLOR BRUSHES
         ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
    <SolidColorBrush x:Key="BackgroundLighterBrush" Color="{StaticResource BackgroundLighter}"/>
    <SolidColorBrush x:Key="BackgroundLightestBrush" Color="{StaticResource BackgroundLightest}"/>

    <!-- Surface/Border Brushes -->
    <SolidColorBrush x:Key="SurfaceStrokeBrush" Color="{StaticResource SurfaceStroke}"/>
    <SolidColorBrush x:Key="SurfaceStrokeLightBrush" Color="{StaticResource SurfaceStrokeLight}"/>
    <SolidColorBrush x:Key="SurfaceStrokeFocusBrush" Color="{StaticResource SurfaceStrokeFocus}"/>

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiary}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabled}"/>

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{StaticResource AccentPrimary}"/>
    <SolidColorBrush x:Key="AccentPrimaryHoverBrush" Color="{StaticResource AccentPrimaryHover}"/>
    <SolidColorBrush x:Key="AccentPrimaryPressedBrush" Color="{StaticResource AccentPrimaryPressed}"/>
    <SolidColorBrush x:Key="AccentPrimaryDarkBrush" Color="{StaticResource AccentPrimaryDark}"/>
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondary}"/>
    <SolidColorBrush x:Key="AccentSecondaryHoverBrush" Color="{StaticResource AccentSecondaryHover}"/>

    <!-- Semantic Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessLight}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="{StaticResource WarningLight}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}"/>
    <SolidColorBrush x:Key="ErrorLightBrush" Color="{StaticResource ErrorLight}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="{StaticResource InfoLight}"/>

    <!-- Special Purpose Brushes -->
    <SolidColorBrush x:Key="SelectionBackgroundBrush" Color="{StaticResource SelectionBackground}"/>
    <SolidColorBrush x:Key="SelectionBackgroundHoverBrush" Color="{StaticResource SelectionBackgroundHover}"/>
    <SolidColorBrush x:Key="OverlayBackgroundBrush" Color="{StaticResource OverlayBackground}"/>
    <SolidColorBrush x:Key="ViewportBackgroundBrush" Color="{StaticResource ViewportBackground}"/>
    <SolidColorBrush x:Key="GridLineBrush" Color="{StaticResource GridLine}"/>
    <SolidColorBrush x:Key="GridLineMinorBrush" Color="{StaticResource GridLineMinor}"/>

    <!-- Wood Brushes -->
    <SolidColorBrush x:Key="WoodLightBrush" Color="{StaticResource WoodLight}"/>
    <SolidColorBrush x:Key="WoodMediumBrush" Color="{StaticResource WoodMedium}"/>
    <SolidColorBrush x:Key="WoodDarkBrush" Color="{StaticResource WoodDark}"/>
    <SolidColorBrush x:Key="WoodGrainBrush" Color="{StaticResource WoodGrain}"/>

    <!-- ═══════════════════════════════════════════════════════════════════════
         GRADIENT BRUSHES
         ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Wood Grain Gradient (horizontal grain effect) -->
    <LinearGradientBrush x:Key="WoodGrainGradient" StartPoint="0%,0%" EndPoint="100%,0%">
        <GradientStop Color="#CD853F" Offset="0"/>
        <GradientStop Color="#DEB887" Offset="0.3"/>
        <GradientStop Color="#D2691E" Offset="0.5"/>
        <GradientStop Color="#DEB887" Offset="0.7"/>
        <GradientStop Color="#CD853F" Offset="1"/>
    </LinearGradientBrush>

    <!-- Subtle panel gradient -->
    <LinearGradientBrush x:Key="PanelHeaderGradient" StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#2D2D2D" Offset="0"/>
        <GradientStop Color="#242424" Offset="1"/>
    </LinearGradientBrush>

    <!-- Accent button gradient -->
    <LinearGradientBrush x:Key="AccentButtonGradient" StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#E09B5A" Offset="0"/>
        <GradientStop Color="#D4894B" Offset="1"/>
    </LinearGradientBrush>

    <!-- Status bar gradient -->
    <LinearGradientBrush x:Key="StatusBarGradient" StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#1F1F1F" Offset="0"/>
        <GradientStop Color="#1A1A1A" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
